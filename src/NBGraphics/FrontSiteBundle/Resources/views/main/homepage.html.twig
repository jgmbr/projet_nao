{% extends '@NBGraphicsFrontSite/frontBaseElements.html.twig' %}

{% block title %}
    Association Nos Amis Les Oiseaux - Accueil
{% endblock %}

{% block body %}
    <div class="home-page-wrapper">
        <video class="video" autoplay muted loop>
            <source src="{{ asset('video/inter.mp4') }}" type="video/mp4">
            <source src="{{ asset('video/NAO_theora.ogg') }}" type="video/ogg">
        </video>
        <h2>Notre programme d'observation</h2>
        <p>
          {% if app.user %}
              <a href="{{ path('nb_graphics_front_site_submitobservation') }}">
                  Observer
              </a>
          {% else %}
          <a href="{{ path('fos_user_registration_register') }}">
              Participer
          </a>
          {% endif %}
        </p>
    </div>

    <main class="home-page-main">
        <h2>Le plus ambitieux programme d'observation jamais créé.</h2>
        <div class="home-page-desktop">

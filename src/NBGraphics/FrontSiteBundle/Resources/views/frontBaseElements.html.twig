<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="robots" content="noindex">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>{% block title %}{% endblock %}</title>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    {% block stylesheets %}{% endblock %}
</head>
<body class="">

<h1> Home from FrontSiteBundle </h1>

<p> Hello World!  </p>

{% if app.user %}
    <p> Bonjour {{ app.user.username }} <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default btn-flat">Déconnexion</a> </p>
    {% if is_granted('ROLE_ADMIN') %}
        <p> <a href="{{ path('admin_page') }}"> Aller sur Espace Administration </a> </p>
    {% else %}
        <p> <a href="{{ path('account_page') }}"> Aller sur Espace Mon Compte </a> </p>
    {% endif %}
{% else %}

    <p>
        <a href="{{ path('fos_user_security_login') }}"> Connexion </a>
    </p>

    <p>
        <a href="{{ path('fos_user_registration_register') }}"> Inscription </a>
    </p>

{% endif %}

    <nav>
        <ul>
            <li><a href="{{ path('nb_graphics_front_site_homepage') }}">Accueil</a></li>
            <li><a href="{{ path('nb_graphics_front_site_interactivewebmap') }}">Notre carte intéractive</a></li>
            <li><a href="{{ path('nb_graphics_front_site_submitobservation') }}">Soumettre une observation</a></li>
        </ul>
    </nav>


    {% block body %}{% endblock %}

</body>
</html>
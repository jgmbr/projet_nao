<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="robots" content="noindex">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendor/font-awesome/css/font-awesome.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendor/Ionicons/css/ionicons.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendor/datatables.net-bs/css/dataTables.bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendor/growl/stylesheets/jquery.growl.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    {% block stylesheets %}
    {% endblock %}
</head>
<body>
    <div class="header-wrapper">
        <header class="main-header">
            <ul>
                <li class="logo">
                    <a href="{{ path('nb_graphics_front_site_homepage') }}">
                        <img src="{{ asset('images/logoOK-bleu.svg') }}" alt="Logo du site">
                    </a>
                </li>
                <li class="header-title">
                    <a href="{{ path('nb_graphics_front_site_homepage') }}">Nos Amis Les Oiseaux</a>
                </li>
                <li class="connect">
                    <a href="{{ path('fos_user_registration_register') }}">S'inscrire</a>
                </li>
                <li class="connect">
                    <a href="{{ path('fos_user_security_login') }}">Se connecter</a>
                </li>
                <li class="connect newletter">
                    <a href="{{ path('nb_graphics_front_site_newsletter') }}">S'inscrire à la newsletter</a>
                </li>
            </ul>
            <img class="hamburger" src="{{ asset('images/menu.png') }}" alt="Voir le menu">
        </header>


        <nav class="main-nav">
            <ul>
                <li>
                    <a href="{{ path('nb_graphics_front_site_homepage') }}">Accueil</a>
                </li>
                <li>
                    <a href="{{ path('nb_graphics_front_site_interactivewebmap') }}">Notre carte intéractive</a>
                </li>
                <li>
                    <a href="{{ path('nb_graphics_front_site_submitobservation') }}">Soumettre une observation</a>
                </li>
                <li>
                    <a href="{{ path('nb_graphics_front_site_researchprogramm') }}">Notre programme de recherche</a>
                </li>
            </ul>
        </nav>


    </div><!-- END: header-wrapper  -->






    <div class="container">
        <header class="col-sm-12">
            <h1> HEADER › Home from FrontSiteBundle </h1>
            {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                <a href="{{ path('admin_page', {'_switch_user': '_exit'}) }}">
                    <i class="fa fa-sign-out" aria-hidden="true"></i> Quitter la connexion utilisateur
                </a>
            {% endif %}
            {% if app.user %}
                <p>
                    Bonjour {{ app.user.username }}
                    <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default btn-flat">Déconnexion</a>
                </p>
            {% endif %}
        </header>

        <nav class="col-sm-12">
            <ul>
                <li><a href="{{ path('nb_graphics_front_site_homepage') }}">Accueil</a></li>
                <li><a href="{{ path('nb_graphics_front_site_newsletter') }}">S'inscrire à la newsletter</a></li>
                <li><a href="{{ path('nb_graphics_front_site_interactivewebmap') }}">Notre carte intéractive</a></li>
                <li><a href="{{ path('nb_graphics_front_site_submitobservation') }}">Soumettre une observation</a></li>
                <li><a href="{{ path('nb_graphics_front_site_researchprogramm') }}">Notre programme de recherche</a></li>
                {% if app.user %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('admin_page') }}"> Aller sur Espace Administration </a></li>
                    {% elseif is_granted('ROLE_COLLABORATOR') %}
                        <li><a href="{{ path('admin_page') }}"> Aller sur Espace Collaborateur </a></li>
                    {% else %}
                        <li><a href="{{ path('admin_page') }}"> Aller sur Espace Mon Compte </a></li>
                    {% endif %}
                {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}"> Connexion </a></li>
                    <li><a href="{{ path('fos_user_registration_register') }}"> Inscription </a></li>
                {% endif %}
            </ul>
        </nav>
    </div>


        {% block body %}{% endblock %}




        <footer class="main-footer">
            <section>
                <h3>Réseaux sociaux</h3>
                <img class="right-arrow" src="{{ asset('images/icon-right-arrow.svg') }}" alt="Voir les réseaux sociaux">
                <ul class="social-links">
                    <li class="facebook">
                        <a href="#">Facebook</a>
                    </li>
                    <li class="twitter">
                        <a href="#">Twitter</a>
                    </li>
                    <li class="instagram">
                        <a href="#">Instagram</a>
                    </li>
                    <li class="youtube">
                        <a href="#">Youtube</a>
                    </li>
                </ul>
            </section>
            <section>
                <h3>Liens complémentaires</h3>
                <img class="right-arrow" src="{{ asset('images/icon-right-arrow.svg') }}" alt="Voir les liens complémentaires">
                <ul>
                    <li>
                        <a href="{{ path('nb_graphics_front_site_terms') }}">Mentions légales</a>
                    </li>
                    <li>
                        <a href="{{ path('nb_graphics_front_site_contactform') }}">Contact</a>
                    </li>
                    <li>
                        <a href="{{ path('nb_graphics_front_site_credits') }}">Crédits</a>
                    </li>
                </ul>
            </section>
            <section>
                <h3>Copyright</h3>
                <p>
                    &copy; Association Nos Amis Les Oiseaux
                    <br>
                    11, rue de la pie qui chante
                    <br>
                    01234 Donaldville
                </p>
            </section>
        </footer>


    <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/datatables.net-responsive/js/dataTables.responsive.js') }}"></script>
    <script src="{{ asset('assets/vendor/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/growl/javascripts/jquery.growl.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/jquery-ui/jquery-ui.min.js') }}"></script>

    {% block javascripts %}
    {% endblock %}

</body>
</html>
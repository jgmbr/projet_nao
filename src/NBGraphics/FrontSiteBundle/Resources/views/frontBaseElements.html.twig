<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="robots" content="noindex">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>{% block title %}{% endblock %}</title>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    {% block stylesheets %}{% endblock %}
</head>
<body class="">

    <header>
        <h1> HEADER › Home from FrontSiteBundle </h1>
        {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
            <a href="{{ path('admin_page', {'_switch_user': '_exit'}) }}">
                <i class="fa fa-sign-out" aria-hidden="true"></i> Quitter la connexion utilisateur
            </a>
        {% endif %}
        {% if app.user %}
            <p>
                Bonjour {{ app.user.username }}
                <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default btn-flat">Déconnexion</a>
            </p>
        {% endif %}
    </header>

    <nav>
        <ul>
            <li><a href="{{ path('nb_graphics_front_site_homepage') }}">Accueil</a></li>
            <li><a href="{{ path('nb_graphics_front_site_interactivewebmap') }}">Notre carte intéractive</a></li>
            <li><a href="{{ path('nb_graphics_front_site_submitobservation') }}">Soumettre une observation</a></li>
            <li><a href="{{ path('nb_graphics_front_site_researchprogramm') }}">Notre programme de recherche</a></li>
            {% if app.user %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('admin_page') }}"> Aller sur Espace Administration </a></li>
                {% else %}
                    <li><a href="{{ path('account_page') }}"> Aller sur Espace Mon Compte </a></li>
                {% endif %}
            {% else %}
                <li><a href="{{ path('fos_user_security_login') }}"> Connexion </a></li>
                <li><a href="{{ path('fos_user_registration_register') }}"> Inscription </a></li>
            {% endif %}
        </ul>
    </nav>

    {% block body %}{% endblock %}

    <footer>
        <h1> FOOTER </h1>
        <ul>
            <li><a href="{{ path('nb_graphics_front_site_terms') }}">Mentions légales</a></li>
            <li><a href="{{ path('nb_graphics_front_site_contactform') }}">Contact</a></li>
            <li><a href="{{ path('nb_graphics_front_site_credits') }}">Crédits</a></li>
        </ul>
    </footer>

    {% block javascripts %}{% endblock %}

</body>
</html>
{% extends "NBGraphicsFrontSiteBundle::frontBaseElements.html.twig" %}

{% block body %}

    <h1> Actualit√©s </h1>

    {% if articles is defined and articles|length > 0 %}
        {% for article in articles %}
            <div class="col-sm-12">
                <div class="col-md-2">
                    {% if article.image is not null %}
                        <img src="{{ asset('uploads/img_article/' ~ article.image.url) }}" />
                    {% else %}
                        <i class="fa fa-picture-o fa-5x" aria-hidden="true" style="margin: 20px;"></i>
                    {% endif %}
                </div>
                <div class="col-md-10">
                    <h2> {{ article.title }} </h2>
                    <p> {{ article.createdAt|date('d/m/Y') }} </p>
                    <p> {{ article.content|truncate(300) }} </p>
                    <p> <a class="btn btn-primary pull-right" href="{{ path('article_view',{'id': article.id, 'slug': article.slug}) }}"> Lire la suite </a> </p>
                </div>
            </div>
            <hr />
        {% endfor %}
        {% include 'NBGraphicsNewsBundle:pages:pagination.html.twig' %}
    {% else %}
        <p> Pas d'article(s). </p>
    {% endif %}

{% endblock %}
{% extends "NBGraphicsFrontSiteBundle::frontBaseElements.html.twig" %}

{% block body %}

    <div class="col-sm-12 col-md-9">
        <div class="box box-default">
            <div class="box-header"> <h3 class="box-title"> Fiche actualité </h3> </div>
            <div class="box-body box-article">
                <table class="table table-responsive">
                    <tbody>
                    <tr>
                        <th>Image</th>
                        <td>[image]</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ article.title }}</td>
                    </tr>
                    <tr>
                        <th>Contenu</th>
                        <td>{{ article.content }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="actions">
            <a href="{{ path('article_list') }}" class="btn btn-primary pull-left">
                <i class="fa fa-chevron-left" aria-hidden="true"></i> &nbsp; Retour à la liste des actualités
            </a>
        </div>
    </div>

{% endblock %}
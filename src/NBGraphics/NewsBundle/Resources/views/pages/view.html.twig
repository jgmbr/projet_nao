{% extends "NBGraphicsFrontSiteBundle::frontBaseElements.html.twig" %}

{% block title %}{{ article.title }}{% endblock %}
{% block description %}{{ article.content }}{% endblock %}
{% block keywords %}actualités, fiche{% endblock %}
{% block robots %}index{% endblock %}

{% block body %}

    <div class="container news-details-page">

        <div class="news-details-image">
            {% if article.image is not null %}
                <img src="{{ asset('uploads/img_article/' ~ article.image.url) }}" alt="Image" />
            {% else %}
                <i class="fa fa-picture-o fa-5x" aria-hidden="true" style="margin: 20px;"></i>
            {% endif %}
        </div>

        <div class="news-details-article">
            <h2> {{ article.title }} </h2>
            <p> {{ article.createdAt|date('d/m/Y') }} </p>
            {{ article.content|raw }}
        </div>

        <div class="actions">
            <a href="{{ path('article_list') }}" class="btn btn-primary pull-left">
                <i class="fa fa-chevron-left" aria-hidden="true"></i> &nbsp; Retour à la liste des actualités
            </a>
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $('.news-details-article a').addClass('btn btn-warning');
        });
    </script>
{% endblock %}
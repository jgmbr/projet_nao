{% extends "NBGraphicsFrontSiteBundle::frontBaseElements.html.twig" %}

{% block body %}

    {% include 'NBGraphicsAdminBundle:Common:menu.html.twig' %}

    <div class="col-sm-12 col-md-9">
        <div class="box box-default">
            <div class="box-header with-border"> <h3 class="box-title">Suppression actualité</h3> </div>
        <div class="box-body box-contract">

    <p>
        Etes-vous certain de vouloir supprimer l'actualité {{ article.id }} ?
    </p>

    <div class="well">
    {{ form_start(delete_form) }}
        <input type="submit" value="Oui, je confirme la suppression" class="btn btn-success" />
        {{ form_rest(delete_form) }}
    {{ form_end(delete_form) }}
    </div>

        </div>
    </div>

    <div class="actions">
        <a href="{{ path('article_index') }}" class="btn btn-primary pull-left">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> &nbsp; Retour à la liste des actualité
        </a>
    </div>
    </div>

{% endblock %}

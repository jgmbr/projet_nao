{% extends "NBGraphicsFrontSiteBundle::frontBaseElements.html.twig" %}

{% block body %}

    {% include 'NBGraphicsAdminBundle:Common:menu.html.twig' %}

    <div class="container news-article-delete">

        <h2>Suppression actualité</h2>
        <p>Etes-vous certain de vouloir supprimer l'actualité {{ article.id }} ?</p>


        {{ form_start(delete_form) }}
        <input type="submit" value="Oui, je confirme la suppression" class="btn btn-danger" />
        {{ form_rest(delete_form) }}
        {{ form_end(delete_form) }}


        <div class="actions">
            <a class="btn btn-primary pull-left" href="{{ path('article_index') }}">
                <i class="fa fa-chevron-left" aria-hidden="true"></i> &nbsp; Retour à la liste des actualité
            </a>
        </div>


    </div>

{% endblock %}

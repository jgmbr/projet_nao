{% extends 'NBGraphicsFrontSiteBundle::frontBaseElements.html.twig' %}

{% block body %}

    <div id="admin-wrapper">

        {% include 'NBGraphicsAdminBundle:Common:menu.html.twig' %}

        <div class="container news-article-new">

            <h2>Nouvelle actualité</h2>

            {{ form_start(form, {'attr': {'class': '', 'role': 'form'}}) }}
            {{ form_widget(form) }}
            <input type="submit" value="Créer" class="btn btn-success" />
            {{ form_end(form) }}


            <div class="actions">
                <a href="{{ path('admin_article_index') }}" class="btn btn-primary pull-left">
                    <i class="fa fa-chevron-left" aria-hidden="true"></i> &nbsp; Retour à la liste des actualités
                </a>
            </div>

        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='//cloud.tinymce.com/stable/tinymce.min.js?apiKey=k5pyfywnci0g0q8zbbeo9qsfyljy6hyh8w91jpso1y1iwq5a'></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            theme: 'modern',
            plugins: [
                'advlist autolink lists link image charmap print preview hr anchor pagebreak',
                'searchreplace wordcount visualblocks visualchars code fullscreen',
                'insertdatetime media nonbreaking save table contextmenu directionality',
                'emoticons template paste textcolor colorpicker textpattern imagetools codesample toc'
            ],
            toolbar1: 'undo redo | insert | styleselect | forecolor bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link',
        });
    </script>
{% endblock %}